# Admin credentials (REQUIRED for initialization)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SuperSecure@dmin123

# Database URL (choose one)
# SQLite (default for development)
DATABASE_URL=sqlite://oxidesk.db

# PostgreSQL (production)
# DATABASE_URL=postgres://user:password@localhost/oxidesk

# MySQL (enterprise)
# DATABASE_URL=mysql://user:password@localhost/oxidesk

# Server configuration (optional, defaults shown)
SERVER_HOST=127.0.0.1
SERVER_PORT=3000

# Session configuration (optional)
SESSION_DURATION_HOURS=24
SESSION_MAX_AGE_HOURS=9
SESSION_SLIDING_WINDOW=true
SECURE_COOKIES=true

# OIDC/SSO Configuration (optional, for enterprise SSO)
OIDC_ENABLED=false
OIDC_CALLBACK_URL=https://oxidesk.example.com/api/auth/oidc/callback

# Rate Limiting (optional, defaults shown)
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Authentication Audit Logging (optional)
AUTH_EVENT_RETENTION_DAYS=90

# Agent Availability Configuration (optional, defaults shown)
# Time in seconds before online agent goes away due to inactivity
INACTIVITY_TIMEOUT_SECONDS=300
# Time in seconds before away agent is reassigned (default 30 min)
MAX_IDLE_THRESHOLD_SECONDS=1800

# Logging (optional)
RUST_LOG=info,oxidesk=debug
